doctype strict
html xml:lang="en" xmlns="http://www.w3.org/1999/xhtml" lang="en"
  head
    meta http-equiv="content-type" content="text/html; charset=UTF-8"/
    title Lonely Planet
    script src="static/routes.js" type="text/javascript"
    link href="static/all.css" media="screen" rel="stylesheet" type="text/css"/
    javascript:
      imagePath = "/images/"
  body
    #container
      .message-wrapper
        #flash-messages.flash-messages style="overflow: visible; opacity: 1; display: none;"
      #header
        #logo
        h1 Lonely Planet: #{destination.name}
    #wrapper
      #sidebar
        .block
          h3 Navigation
          .content
            .inner
              ul
                - destination.parents.each do |parent|
                  li
                    a href="http://atlas.devint.lpo/ui/places" #{parent.name}
                li
                  a href="http://atlas.devint.lpo/ui/places" #{destination.name}
      #main
        .block
          .secondary-navigation
            ul
              li.first
                a href="http://atlas.devint.lpo/ui/places" #{destination.name}
            .clear
          .content
            .inner
              - %w(introduction history weather transport).each do |section|
                div class=section
                  h4= section.capitalize
                  - if destination.send(section).to_s == ''
                    p No information available.
                  - else
                    - destination.send(section).split("\n").each do |line|
                      p= line
